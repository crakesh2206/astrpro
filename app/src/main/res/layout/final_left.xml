<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <LinearLayout
        android:id="@+id/layout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="3dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="0dp"

            android:src="@mipmap/ic_user_admin" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="10dp"

            android:src="@drawable/arrow_bg2" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_corner1"
            android:padding="8dp"
            android:text="public View onCreateView(LayoutInflater inflater, @Nullable ViewGroup container, @Nullable Bundle savedInstanceState        View root = inflater.inflate(R.layout.frag_inbox,container,false);"
            android:textColor="#000" />
    </LinearLayout>
    <TextView

        android:text="27-02-2014 7:30PM"
        android:layout_gravity="left"

        android:layout_width="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvTimeofmsg" />
</LinearLayout>